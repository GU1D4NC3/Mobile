<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/layout_newsletter_width"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/layout_newsletter_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_gravity="center"
    android:background="@drawable/bg_white"
    android:padding="@dimen/layout_margin_16"
    android:layout_margin="10dp"
    android:elevation="@dimen/indicator_height"
    android:id="@+id/layout">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/fontStyleNormal"
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_news"
        android:textColor="@color/orange"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/line_stroke"
        android:layout_height="10dp"
        android:background="@color/gray100"
        app:layout_constraintLeft_toRightOf="@+id/category"
        app:layout_constraintTop_toTopOf="@+id/category"
        app:layout_constraintBottom_toBottomOf="@+id/category"
        android:layout_marginLeft="4dp" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/fontStyleNormal"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/sample"
        android:textColor="@color/default_black"
        app:layout_constraintLeft_toRightOf="@+id/line"
        app:layout_constraintTop_toTopOf="@+id/category"
        app:layout_constraintBottom_toBottomOf="@+id/category"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:src="@drawable/img_cover_sample"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/category"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>