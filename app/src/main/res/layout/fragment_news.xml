<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/fontStyleBold"
            android:id="@+id/title_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_news"
            android:textColor="@color/default_black"
            android:textSize="20dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            style="@style/fontStyleNormal"
            android:id="@+id/desc_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc_news"
            android:textColor="@color/gray"
            android:textSize="14dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            style="@style/fontStyleBold"
            android:id="@+id/theme0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_0"
            android:textColor="@color/default_black"
            android:textSize="20dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_news0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_newsletter"
            tools:itemCount="3"/>

        <TextView
            style="@style/fontStyleBold"
            android:id="@+id/theme1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_1"
            android:textColor="@color/default_black"
            android:textSize="20dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_news1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_newsletter"
            tools:itemCount="3"/>

        <TextView
            style="@style/fontStyleBold"
            android:id="@+id/theme2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_2"
            android:textColor="@color/default_black"
            android:textSize="20dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_news2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_newsletter"
            tools:itemCount="3"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>