<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/layout_margin_default"
        android:layout_marginRight="@dimen/layout_margin_default"
        android:layout_marginTop="26dp">

        <!-- TOP LAYOUT -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="6dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/fontStyleNormal"
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_news"
                android:textColor="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_close"
                android:layout_marginTop="4dp"/>

            <View
                android:id="@+id/line"
                android:layout_width="@dimen/line_stroke"
                android:layout_height="10dp"
                android:background="@color/gray100"
                app:layout_constraintLeft_toRightOf="@+id/category"
                app:layout_constraintTop_toTopOf="@+id/category"
                app:layout_constraintBottom_toBottomOf="@+id/category"
                android:layout_marginLeft="4dp" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/fontStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/sample"
                android:textColor="@color/default_black"
                app:layout_constraintLeft_toRightOf="@+id/line"
                app:layout_constraintTop_toTopOf="@+id/category"
                app:layout_constraintBottom_toBottomOf="@+id/category"
                android:layout_marginLeft="4dp" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/fontStyleBold"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/sample"
                android:textColor="@color/default_black"
                android:textSize="@dimen/default_text_headline1"
                app:layout_constraintLeft_toLeftOf="@id/category"
                app:layout_constraintTop_toBottomOf="@+id/category"
                android:layout_marginTop="8dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/fontStyleNormal"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/sample"
                android:textColor="@color/default_gray"
                android:textSize="@dimen/default_text_tiny"
                app:layout_constraintLeft_toLeftOf="@id/category"
                app:layout_constraintTop_toBottomOf="@+id/title"
                android:layout_marginTop="8dp"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_stroke"
                android:background="@color/gray_light"
                app:layout_constraintTop_toBottomOf="@+id/date"
                android:layout_marginTop="@dimen/layout_margin_28"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/fontStyleNormal"
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="@string/sample"
                android:textColor="@color/gray800"
                android:textSize="@dimen/default_text_tiny"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/default_button_height"
                app:layout_constraintTop_toBottomOf="@+id/content"
                android:background="@drawable/btn_orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/default_margin">
                <TextView
                    style="@style/fontStyleNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_quiz"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"/>
            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:src="@drawable/img_cover_sample"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/category"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>