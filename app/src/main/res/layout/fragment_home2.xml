<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/top_orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/health_check"
            android:layout_marginBottom="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:background="@drawable/corner_radius26"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘 하루 어떠셨나요? 알려주세요!"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:drawableRight="@drawable/check_image"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:background="@drawable/bg_white20"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:elevation="8dp">

            <TextView
                android:id="@+id/kcal_eat"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="섭취한 칼로리"
                android:textColor="#FFF5E8"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginRight="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintBottom_toTopOf="@id/number_eat"/>

            <TextView
                android:id="@+id/number_eat"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="928 kcal"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginRight="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/kcal_eat"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toTopOf="@id/kcal_suggest"/>

            <TextView
                android:id="@+id/kcal_suggest"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="권장 칼로리"
                android:textColor="#FFF5E8"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginRight="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_eat"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toTopOf="@id/number_suggest"/>

            <TextView
                android:id="@+id/number_suggest"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="2300 kcal"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginRight="25dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/kcal_suggest"
                app:layout_constraintBottom_toTopOf="@id/text_walk"/>

            <TextView
                android:id="@+id/text_walk"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="얼마나 움직였나요?"
                android:textColor="#FFF5E8"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginRight="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_suggest"
                android:layout_marginTop="21dp"
                app:layout_constraintBottom_toTopOf="@id/number_walk" />

            <TextView
                android:id="@+id/number_walk"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="23 걸음"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginRight="25dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/text_walk"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="21dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="17dp">

                <TextView
                    android:id="@+id/text_momground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="정희재님"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/image_baby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_momground">
                    
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/progress"
                        android:layout_width="230dp"
                        android:layout_height="150dp"
                        android:indeterminateOnly="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/text_score"
                        style="@style/fontStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 건강점수는?"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="0.4"/>

                    <TextView
                        android:id="@+id/text_value"
                        style="@style/fontStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="92점"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="26dp"
                        app:layout_constraintTop_toBottomOf="@+id/text_score"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/image_baby"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="12 Days"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/health_check"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/health_check_background"
            app:layout_constraintTop_toBottomOf="@id/card"
            android:layout_marginTop="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/text_health_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="health check"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#FF701F"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                style="@style/fontStyleNormal"
                android:id="@+id/health_check_button1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_daily_done"
                android:text="월"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#6B6B6B"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/text_health_check"
                app:layout_constraintRight_toLeftOf="@id/health_check_button2"/>

            <TextView
                style="@style/fontStyleNormal"
                android:id="@+id/health_check_button2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_daily_done"
                android:text="화"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#6B6B6B"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/health_check_button1"
                app:layout_constraintRight_toLeftOf="@id/health_check_button3"/>

            <TextView
                style="@style/fontStyleNormal"
                android:id="@+id/health_check_button3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_daily_done"
                android:text="수"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#6B6B6B"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/health_check_button2"
                app:layout_constraintRight_toLeftOf="@id/health_check_button4"/>

            <TextView
                style="@style/fontStyleNormal"
                android:id="@+id/health_check_button4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_daily_done"
                android:text="목"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#6B6B6B"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/health_check_button3"
                app:layout_constraintRight_toLeftOf="@id/health_check_button5"/>

            <TextView
                style="@style/fontStyleNormal"
                android:id="@+id/health_check_button5"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/health_check_button"
                android:text="금"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#6B6B6B"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/health_check_button4"
                app:layout_constraintRight_toLeftOf="@id/health_check_button6"/>

            <TextView
                style="@style/fontStyleNormal"
                android:id="@+id/health_check_button6"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/health_check_button"
                android:text="토"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#6B6B6B"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/health_check_button5"
                app:layout_constraintRight_toLeftOf="@id/health_check_button7"/>

            <TextView
                style="@style/fontStyleNormal"
                android:id="@+id/health_check_button7"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/health_check_button"
                android:text="일"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#6B6B6B"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/health_check_button6"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/fontStyleBold"
            android:id="@+id/title_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_today_analysis"
            android:textColor="@color/default_black"
            android:textSize="20dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/health_check"/>

        <TextView
            style="@style/fontStyleNormal"
            android:id="@+id/desc_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_today_analysis_desc"
            android:textColor="@color/gray"
            android:textSize="14dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_news"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/desc_news"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_nutri_report"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintTop_toBottomOf="@+id/desc_news"
                android:background="@drawable/bg_gray"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_nutr_graph"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:scaleType="centerInside"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_expert_solution"
                android:padding="10dp">

                <TextView
                    style="@style/fontStyleOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_expert_solution"
                    android:textColor="@color/orange"
                    android:layout_marginTop="@dimen/layout_margin_4"/>
                <TextView
                    style="@style/fontStyleNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:layout_marginTop="@dimen/layout_margin_4"
                    android:layout_marginBottom="@dimen/layout_margin_4"
                    android:text="@string/text_expert_solution_example"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                style="@style/fontStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_newspaper"
                android:textColor="@color/default_black"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/health_check"/>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_newsletter"
                tools:itemCount="3"/>
        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>