<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.health.HealthFragment">

    <TextView
        style="@style/fontStyleBold"
        android:id="@+id/title_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_health"
        android:textColor="@color/default_black"
        android:textSize="20dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.tabs.TabLayout
        style="@style/fontStyleBold"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        app:tabBackground="@drawable/bg_indicator"
        app:tabIndicatorColor="@color/orange"
        app:tabIndicatorHeight="@dimen/indicator_height"
        app:layout_constraintTop_toBottomOf="@+id/title_health"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/layout_margin_default"
        android:layout_marginRight="@dimen/layout_margin_default"
        android:layout_marginTop="20dp"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/viewPager"
        app:layout_constraintTop_toBottomOf="@id/tab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>